{
  "name": "sage",
  "version": "9.0.0-alpha.3",
  "author": "Roots <team@roots.io>",
  "homepage": "https://roots.io/sage/",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git://github.com/roots/sage.git"
  },
  "bugs": {
    "url": "https://github.com/roots/sage/issues"
  },
  "licenses": [
    {
      "type": "MIT",
      "url": "http://opensource.org/licenses/MIT"
    }
  ],
  "eslintConfig": {
    "root": true,
    "extends": "eslint:recommended",
    "globals": {
      "wp": true
    },
    "env": {
      "node": true,
      "es6": true,
      "amd": true,
      "browser": true,
      "jquery": true
    },
    "parserOptions": {
      "ecmaFeatures": {
        "globalReturn": true,
        "generators": false,
        "objectLiteralDuplicateProperties": false,
        "experimentalObjectRestSpread": true
      },
      "ecmaVersion": 2017,
      "sourceType": "module"
    },
    "plugins": [
      "import"
    ],
    "settings": {
      "import/core-modules": [],
      "import/ignore": [
        "node_modules",
        "\\.(coffee|scss|css|less|hbs|svg|json)$"
      ]
    },
    "rules": {
      "comma-dangle": [
        "error",
        {
          "arrays": "always-multiline",
          "objects": "always-multiline",
          "imports": "always-multiline",
          "exports": "always-multiline",
          "functions": "ignore"
        }
      ]
    }
  },
  "stylelint": {
    "extends": "stylelint-config-standard",
    "rules": {
      "no-empty-source": null
    }
  },
  "scripts": {
    "build": "webpack --progress --config assets/build/webpack.config.js --mode development",
    "build:production": "webpack --progress -p --config assets/build/webpack.config.js --mode production",
    "build:profile": "webpack --progress --profile --json --config assets/build/webpack.config.js",
    "start": "webpack --hide-modules --watch --config assets/build/webpack.config.js",
    "rmdist": "rimraf dist",
    "lint": "npm run -s lint:scripts && npm run -s lint:styles",
    "lint:scripts": "eslint assets/scripts assets/build",
    "lint:styles": "stylelint \"assets/styles/**/*.{css,sass,scss,sss,less}\""
  },
  "engines": {
    "node": ">= 6.9.4"
  },
  "devDependencies": {
    "autoprefixer": "~7.1",
    "browser-sync": "^2.26.7",
    "browser-sync-webpack-plugin": "^2.2.2",
    "bs-html-injector": "~3.0",
    "buble-loader": "^0.4.1",
    "cache-loader": "~1.0",
    "clean-webpack-plugin": "^0.1.16",
    "copy-globs-webpack-plugin": "^0.3.0",
    "css-loader": "^0.28.4",
    "cssnano": "~4.0.0-rc.1",
    "eslint": "~4.2",
    "eslint-loader": "~1.9",
    "eslint-plugin-import": "~2.7",
    "file-loader": "^4.0.0",
    "friendly-errors-webpack-plugin": "^1.6.1",
    "imagemin-mozjpeg": "~6.0",
    "imagemin-webpack-plugin": "~2.4.2",
    "import-glob": "~1.5",
    "jpegtran-bin": "^4.0.0",
    "mini-css-extract-plugin": "~0.7.0",
    "node-sass": "~4.5",
    "postcss-loader": "~2.0",
    "postcss-safe-parser": "~3.0",
    "resolve-url-loader": "~2.1",
    "rimraf": "~2.6",
    "sass-loader": "~6.0",
    "style-loader": "^0.18.2",
    "stylelint": "~8.3.0",
    "stylelint-config-standard": "~18.3.0",
    "stylelint-webpack-plugin": "^0.10.5",
    "svg-inline-loader": "^0.8.0",
    "twitter-fetcher": "17.0.0",
    "uglifyjs-webpack-plugin": "^2.1.3",
    "url-loader": "^0.5.9",
    "webpack": "^4.35.2",
    "webpack-assets-manifest": "^0.7.0",
    "webpack-cli": "^3.3.5",
    "webpack-dev-middleware": "~3.7.0",
    "webpack-hot-middleware": "~2.18",
    "webpack-merge": "~4.1",
    "yargs": "~8.0"
  },
  "dependencies": {
    "@fancyapps/fancybox": "fancyapps/fancybox",
    "countup.js": "^1.9.1",
    "custom-select": "^1.1.2",
    "d3": "^5.9.7",
    "d3-v4-grid": "^2.0.2",
    "fastclick": "^1.0.6",
    "flexboxgrid-sass": "^8.0.5",
    "fullpage.js": "^2.9.4",
    "gsap": "^1.20.2",
    "headroom.js": "^0.9.4",
    "imagesloaded": "^4.1.3",
    "imports-loader": "^0.7.1",
    "instafeed.js": "^1.4.1",
    "jquery": "1.12.4 - 3",
    "json-loader": "^0.5.7",
    "page": "^1.7.1",
    "postcss-sass": "~0.2.0",
    "query-string": "^5.0.0",
    "scrollmagic": "^2.0.5",
    "slick-carousel": "1.7.1",
    "tachyons": "^4.7.4",
    "typed.js": "^2.0.5"
  }
}
