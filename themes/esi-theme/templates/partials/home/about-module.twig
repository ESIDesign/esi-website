  <section class="vh-100 relative swipe-section about-module">
    
    <div class="fill-lines absolute absolute--fill flex items-start content-start justify-center overflow-hidden z-0">
      {% include 'svg/bg-lines.twig' %}
    </div>
    <div class="fill-lines absolute absolute--fill flex items-start content-start justify-center z-0 overflow-hidden under z-0">
      {% include 'svg/bg-lines.twig' %}
    </div>

    <div class="absolute absolute--fill flex items-center content-center justify-center z-1">
      
      <div class="w-70 tc">
        <h3 class="t-50 t-white din-condensed lh-solid ttu"><span 
          data-js-animate-this 
